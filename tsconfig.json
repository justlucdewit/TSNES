{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Classic",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
